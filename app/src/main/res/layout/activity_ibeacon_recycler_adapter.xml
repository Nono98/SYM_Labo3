<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/white"
    android:layout_marginBottom="20dp"
    android:id="@+id/ibeacon_recycler_view"
    tools:context=".ibeacon.IBeaconRecyclerAdapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/card_one"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ibeacon_uuid"/>

        <TextView
            android:id="@+id/uuid"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30dp"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/card_two"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="10dp"
            android:layout_below="@id/card_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ibeacon_major"/>

        <TextView
            android:id="@+id/major"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30dp"
            android:layout_margin="10dp"
            android:layout_below="@id/card_one"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/card_three"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/card_two"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ibeacon_minor"/>

        <TextView
            android:id="@+id/minor"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30dp"
            android:textSize="10dp"
            android:layout_margin="10dp"
            android:layout_below="@id/card_two" />

        <TextView
            android:id="@+id/card_four"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@id/card_three"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ibeacon_rssi"/>

        <TextView
            android:id="@+id/rssi"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_one"
            android:paddingLeft="30dp"
            android:textSize="10dp"
            android:layout_margin="10dp"
            android:layout_below="@id/card_three"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>